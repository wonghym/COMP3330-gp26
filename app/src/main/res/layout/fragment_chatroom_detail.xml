<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatroomDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatroom_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" >


        <ImageView
            android:id="@+id/chatroom_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_24"
            android:contentDescription="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/chatroom_online" />

        <TextView
            android:id="@+id/chatroom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintStart_toEndOf="@+id/chatroom_back_button"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chatroom_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 online"
            app:layout_constraintTop_toBottomOf="@+id/chatroom_title"
            app:layout_constraintStart_toStartOf="@id/chatroom_title"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/chatroom_online"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatroom_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/chatroom_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Message"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/input_background"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chatroom_send" />

        <ImageButton
            android:id="@+id/chatroom_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_background"
            android:src="@drawable/ic_send_24"
            android:contentDescription="Send Message"
            app:tint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatroom_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/chatroom_chat_item"
        app:layout_constraintTop_toBottomOf="@+id/chatroom_container"
        app:layout_constraintBottom_toTopOf="@id/chatroom_input_container"/>

</androidx.constraintlayout.widget.ConstraintLayout>