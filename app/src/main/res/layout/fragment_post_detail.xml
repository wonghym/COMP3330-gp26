<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDetailFragment"
    android:paddingTop="24dp">

    <ImageView
        android:id="@+id/postDetail_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_24"
        android:layout_marginStart="24dp"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/postDetail_title"
        app:layout_constraintBottom_toBottomOf="@+id/postDetail_title" />

    <TextView
        android:id="@+id/postDetail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_marginStart="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="28sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/postDetail_back_button"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="3"
        android:ellipsize="end"/>


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/postDetails_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/postDetail_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/postDetail_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/postDetail_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fillViewport="true">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/postDetail_profilepic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/ShapeAppearance.App.Main_Add_Button" />

                <TextView
                    android:id="@+id/postDetail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="Test"
                    app:layout_constraintStart_toEndOf="@id/postDetail_profilepic"
                    app:layout_constraintTop_toTopOf="@id/postDetail_profilepic" />

                <TextView
                    android:id="@+id/postDetail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 hours ago"
                    app:layout_constraintBottom_toBottomOf="@id/postDetail_profilepic"
                    app:layout_constraintStart_toStartOf="@id/postDetail_name" />

                <TextView
                    android:id="@+id/postDetail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/postDetail_time"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Testing Testing Testing Testing Testing Testing Testing Testing Testing Testing Testing Testing"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/postDetail_join_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Join (1/4)"
                app:layout_constraintTop_toBottomOf="@id/postDetail_details" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/postDetail_join_button"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/postDetail_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/postDetails_top"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postDetail_forum_recycler"
            android:layout_width="match_parent"
            android:paddingHorizontal="14dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/chat_item" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/postDetail_forum_addMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="Add new msg"
        app:srcCompat="@drawable/ic_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/buttons"
        app:tint="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Main_Add_Button"/>

</androidx.constraintlayout.widget.ConstraintLayout>