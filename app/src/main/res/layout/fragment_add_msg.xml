<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".AddMsgFragment">

    <ImageView
        android:id="@+id/addMsg_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_24"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addMsg_header"
        app:layout_constraintBottom_toBottomOf="@+id/addMsg_header" />

    <TextView
        android:id="@+id/addMsg_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add message"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="28sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/addMsg_back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addMsg_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Put your comment below:"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addMsg_back_button" />

    <EditText
        android:id="@+id/addMsg_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint=""
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:lines="10"
        android:background="@drawable/input_container_background"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addMsg_text_label" />

    <Button
        android:id="@+id/addMsg_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Post"
        android:backgroundTint="@color/button_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>